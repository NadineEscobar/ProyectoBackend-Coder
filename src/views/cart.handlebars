<h1>Carrito {{cart._id}}</h1>

{{#if cart.products.length}}
  <ul>
    {{#each cart.products}}
      <li>
        <strong>{{this.product.title}}</strong> - Cantidad: {{this.quantity}} - Precio: ${{this.product.price}}

       
        <form method="POST" action="/api/carts/{{cart._id}}/products/{{this.product._id}}?_method=PUT">
          <input name="quantity" type="number" value="{{this.quantity}}" min="1" />
          <button type="submit">Actualizar</button>
        </form>

        
        <form method="POST" action="/api/carts/{{cart._id}}/products/{{this.product._id}}?_method=DELETE">
          <button type="submit">Eliminar</button>
        </form>
      </li>
    {{/each}}
  </ul>

 
  <form method="POST" action="/api/carts/{{cart._id}}?_method=DELETE">
    <button type="submit">Vaciar carrito</button>
  </form>
{{else}}
  <p>El carrito está vacío.</p>
{{/if}}