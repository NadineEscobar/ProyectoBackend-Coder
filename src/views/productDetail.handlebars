<h1 style="text-align:center;">{{product.title}}</h1>

<div class="product-detail-container">
  <img src="{{product.thumbnails.[0]}}" alt="{{product.title}}" class="product-detail-image" />
  
  <div class="product-detail-info">
    <p>{{product.description}}</p>
    <p>Precio: ${{product.price}}</p>
    <p>Categoría: {{product.category}}</p>
    <button id="addToCartBtn" data-id="{{product._id}}">Agregar al carrito</button>
  </div>
</div>

<a href="/" class="back-button">← Volver a Productos</a>

<script src="/js/cart-client.js"></script>